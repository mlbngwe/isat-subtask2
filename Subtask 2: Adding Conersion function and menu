#include <iostream>
#include <bitset>
#include <string>
#include <sstream>
#include <cstdlib>
#include <ctime>
using namespace std;

string decimalToBinary(int n) {
    return bitset<32>(n).to_string().substr(bitset<32>(n).to_string().find('1'));
}

int binaryToDecimal(const string &b) {
    return stoi(b, nullptr, 2);
}

string decimalToHexadecimal(int n) {
    stringstream ss;
    ss << hex << uppercase << n;
    return ss.str();
}

int hexadecimalToDecimal(const string &h) {
    return stoi(h, nullptr, 16);
}

void menu() {
    srand(time(0));
    int choice;
    while (true) {
        cout << "\nConversion Menu:\n";
        cout << "1. Convert Decimal to Binary\n";
        cout << "2. Convert Binary to Decimal\n";
        cout << "3. Convert Decimal to Hexadecimal\n";
        cout << "4. Convert Hexadecimal to Decimal\n";
        cout << "5. Demo (Random Decimal to Binary)\n";
        cout << "6. Exit\n";
        cout << "Enter your choice (1-6): ";
        cin >> choice;

        if (choice == 1) {
            int dec;
            cout << "Enter a decimal number: ";
            cin >> dec;
            cout << "Binary equivalent: " << decimalToBinary(dec) << "\n";
        }
        else if (choice == 2) {
            string bin;
            cout << "Enter a binary number: ";
            cin >> bin;
            try {
                cout << "Decimal equivalent: " << binaryToDecimal(bin) << "\n";
            } catch (...) {
                cout << "Invalid binary number.\n";
            }
        }
        else if (choice == 3) {
            int dec;
            cout << "Enter a decimal number: ";
            cin >> dec;
            cout << "Hexadecimal equivalent: " << decimalToHexadecimal(dec) << "\n";
        }
        else if (choice == 4) {
            string hexVal;
            cout << "Enter a hexadecimal number: ";
            cin >> hexVal;
            try {
                cout << "Decimal equivalent: " << hexadecimalToDecimal(hexVal) << "\n";
            } catch (...) {
                cout << "Invalid hexadecimal number.\n";
            }
        }
        else if (choice == 5) {
            int randomNum = rand() % 100;
            cout << "Random Decimal: " << randomNum << "\n";
            cout << "Binary equivalent: " << decimalToBinary(randomNum) << "\n";
        }
        else if (choice == 6) {
            cout << "Exiting program...\n";
            break;
        }
        else {
            cout << "Invalid choice. Please select 1-6.\n";
        }
    }
}

int main() {
    menu();
    return 0;
}
